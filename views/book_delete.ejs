<h1><%=title%>: <%=book.title%></h1>
<%if(book_instances.length){ %>
    <p><strong>Delete the following book copies before attempting to delete this book.</strong></p>
    <div style="margin-left: 20px;margin-top: 20px;">
        <h4>Book copies</h4>
        <dl>
            <%book_instances.forEach((book_instance) =>{%>
                <dt><a href="<%=book_instance.url%>"><%=book_instance.imprint%></a></dt>
                <% if(book_instance.status =='Available') { %>
        
                    <span class="text-success"><%=book_instance.status%></span>
                <%} else if(book_instance.status=='Maintenance'){%>
                    <span class="text-danger"><%=book_instance.status%></span>
                
                <%} else {%>
                    <span class="text-warning"><%=book_instance.status%></span>
                <%}%>
                <%if(book_instance.status!='Available'){%>
                    <p><strong>Due back: </strong><%=book_instance.due_back_formatted%></span>
                 <%}%>
            <%});%>
        </dl>
    </div>
<%} else{%>
    <p>Do you really want to delete this Book?</p>
    <form action="" method="POST">
        <div class="form-group">
            <input type="hidden" name="bookid" required value="<%=book._id%>">
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<%}%>
